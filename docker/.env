# ===========================================
# Open Notebook + vLLM Configuration
# ===========================================

# Application Settings
APP_PORT=8502
LOG_LEVEL=INFO

# ===========================================
# SurrealDB Configuration
# ===========================================
SURREAL_ADDRESS=ws://surreal-db:8100
SURREAL_PORT=8100
SURREAL_USER=root
SURREAL_PASS=root
SURREAL_NAMESPACE=open_notebook
SURREAL_DATABASE=open_notebook

# ===========================================
# vLLM / OpenAI Compatible API Configuration
# ===========================================
# Note: For Docker on Linux, use host.docker.internal to access
# services running on the host machine (vLLM on port 8000)
OPENAI_API_BASE=http://10.10.15.212:8000/v1
OPENAI_API_KEY=dummy-key

# ===========================================
# Model Configuration
# ===========================================
# Note: Model name must match exactly what vLLM is serving (including trailing slash if present)
DEFAULT_CHAT_MODEL=gpt-oss-20b/
DEFAULT_TRANSFORMATION_MODEL=gpt-oss-20b/
DEFAULT_EMBEDDING_MODEL=gpt-oss-20b/
