# ===========================================
# Open Notebook + vLLM Configuration
# ===========================================

# Application Settings
APP_PORT=8501
LOG_LEVEL=INFO

# ===========================================
# SurrealDB Configuration
# ===========================================
SURREAL_ADDRESS=ws://surreal-db:8000
SURREAL_PORT=8000
SURREAL_USER=root
SURREAL_PASS=root
SURREAL_NAMESPACE=open_notebook
SURREAL_DATABASE=open_notebook

# ===========================================
# vLLM / OpenAI Compatible API Configuration
# ===========================================
# Set your vLLM server endpoint here
# For Docker on Linux: use host.docker.internal or actual host IP
# Example: http://192.168.1.100:8000/v1
OPENAI_API_BASE=http://host.docker.internal:8000/v1
OPENAI_API_KEY=dummy-key

# ===========================================
# Model Configuration
# ===========================================
# Set the model name served by your vLLM server
DEFAULT_CHAT_MODEL=your-model-name
DEFAULT_TRANSFORMATION_MODEL=your-model-name
DEFAULT_EMBEDDING_MODEL=your-model-name
